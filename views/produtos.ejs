<!DOCTYPE html>
<html>

  <head>
    <title><%= title %></title>
    <%- include('imports'); -%>
  </head>

  <body>
      <%- include('navbar'); -%>


      <div class="card mb-3">
        <div class ="container">
  
          <div class ="row">
  
              <div class="row">
                <div class="col-md-12">
                    <h1 id="id_produtos">Produtos</h1>
                </div>
              </div>  
            
  
            <% cadastros.forEach((cadastros)=>{%>
  
              <div class="card mb-3">
                <div class="row no-gutters">
  
                  <div class="container">
                      <div class="row">
                        <div class="col-sm">
                          <img src="/images/<%= cadastros.image %>" class="card-img">
                        </div>
                        <div class="col-sm">
                          <h5 class="card-title"><%= cadastros.name %></h5>
                          <p class="product_card-text"><%= cadastros.description %></p>
                          <h5 class="card-title"><%= cadastros.preco %></h5>
                        </div>
                        <div class="col-sm">
                            <br>
                            <br>
                            <br>
                          <a href="/admin/products" class=" btn btn btn-success">Adicionar ao Carrinho</a>
                        </div>
                      </div>
                    </div>
  
                </div>
              </div>
  
  
  
                
  
            <% }); %>      
  
          </div>
  
        </div>
    </div>
  </body>
</html>